@page "/admin/artistedit/{ArtistId:int}"
@inherits ASArtistEditViewModel
<div class="mud-palette-override"> @* This outer div is necessary for CSS Isolation to function *@


    @if (!IsReady)
    {
        <MudText>
            Loading....
        </MudText>
    }

	@if (!Saved)
	{
			<section class="artist">
			<MudText Typo="Typo.h6" GutterBottom="true">@Artist?.ArtistId</MudText> @* Replace with an appropriate identifying string property *@
			<EditForm Model="@Artist" OnValidSubmit="OnValidSubmit">
				<DataAnnotationsValidator />
				<MudCard>
					<MudCardContent>
						<MudText Typo="Typo.h6">Artist ID: @Artist.ArtistId</MudText>
						<MudTextField @bind-Value="Artist.Name" Label="Name" Variant="Variant.Outlined" />
                        <MudTextField @bind-Value="Artist.Code" Label="Code" Variant="Variant.Outlined" />
                        <MudTextField @bind-Value="Artist.Email" Label="Email Address" InputMode="InputMode.email" Variant="Variant.Outlined" />
                        <MudTextField Lines="5" @bind-Value="Artist.AboutBlurb" Variant="Variant.Outlined" />
                        <MudTextField @bind-Value="Artist.AppBarImgSrcLarge" Label="Small App Bar Image URL" />
                        <MudTextField @bind-Value="Artist.AppBarImgSrcLarge" Label="Large App Bar Image URL" />
                        <MudTextField @bind-Value="Artist.HeaderCssClass" Label="Header CSS Class" />
                        <MudTextField @bind-Value="Artist.MainContentCssClass" Label="Content CSS Class" />
                        <MudTextField @bind-Value="Artist.FooterCssClass" Label="Footer CSS Class" />
                        <MudCheckBox @bind-Checked="Artist.IsActive" Label="Active" />
                        <MudNumericField @bind-Value="Artist.DisplayOrder" Label="Listing Priority" />
					</MudCardContent>
					<MudCardActions>
						<MudButtonGroup Variant="Variant.Filled" OverrideStyles="false">
							<MudButton ButtonType="ButtonType.Submit" Variant="Variant.Filled" Color="Color.Primary" Class="ml-auto">Save</MudButton>
							<MudButton OnClick="@ReturnToList" ButtonType="ButtonType.Button" Variant="Variant.Filled" Color="Color.Error" Class="ml-auto">Cancel</MudButton>
						</MudButtonGroup>
					</MudCardActions>
				</MudCard>
				<MudText Typo="Typo.body2" Align="Align.Center" Class="my-4">
					Fill out the form correctly to see the success message.
				</MudText>

                <MudExpansionPanels>
                    <MudExpansionPanel Text="Show Validation Summary">
                        @if (Saved)
                        {
                            <MudText Color="Color.Success">Success</MudText>
                        }
                        else
                        {
                            <MudText Color="@Color.Error">
                                <ValidationSummary />
                            </MudText>
                        }
                    </MudExpansionPanel>
                </MudExpansionPanels>
			</EditForm>
			</section>
	}

	else
    {
        <div>
            <a class="btn btn-secondary m-2" @onclick="@ReturnToList">
                Return to list
            </a>
        </div>
    }
@if (!string.IsNullOrWhiteSpace(Message))
    {
        <div class="alert @StatusClass">
            @Message
                <MudButton @onclick="@ClearMessage" Variant="Variant.Filled" Color="Color.Error" Style="height: 12px; width: 12px; min-width: 12px; padding: 1px; top: -6px;">
                    <i class="fas fa-times"></i>
                </MudButton>
        </div>
    }</div>
