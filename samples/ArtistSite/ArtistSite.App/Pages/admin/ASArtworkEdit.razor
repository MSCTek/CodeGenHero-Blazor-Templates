@page "/admin/artworkedit/{ArtworkId:int}"
@inherits ASArtworkEditViewModel
<div class="mud-palette-override"> @* This outer div is necessary for CSS Isolation to function *@


    @if (!IsReady)
    {
        <MudText>
            Loading....
        </MudText>
    }

	@if (!Saved)
	{
			<section class="artwork">
			<MudText Typo="Typo.h6" GutterBottom="true">@Artwork?.ArtworkId</MudText> @* Replace with an appropriate identifying string property *@
			<EditForm Model="@Artwork" OnValidSubmit="OnValidSubmit">
				<DataAnnotationsValidator />
				<MudCard>
					<MudCardContent>
						<MudText Typo="Typo.h6">Artwork ID: @Artwork.ArtworkId</MudText>
						@* Add your editor controls for editing the object here, within the MudCardContent *@
                        <MudNumericField @bind-Value="Artwork.ArtistId" Label="Artist ID" />
                        <MudTextField @bind-Value="Artwork.Name" Label="Name" />
                        <MudTextField @bind-Value="Artwork.Description" Label="Description" Lines="5" />
                        <MudTextField @bind-Value="Artwork.LayoutPageName" Label="Layout Page Name" />
                        <MudTextField @bind-Value="Artwork.CssClass" Label="Page CSS Class" />
                        <MudTextField @bind-Value="Artwork.IconUri" Label="Icon URI" />
                        <MudTextField @bind-Value="Artwork.ImageUri" Label="Image URI" />
                        <MudCheckBox @bind-Checked="Artwork.IsActive" Label="Active" />
                        <MudNumericField @bind-Value="Artwork.DisplayOrder" Label="Listing Priority" />
					</MudCardContent>
					<MudCardActions>
						<MudButtonGroup Variant="Variant.Filled" OverrideStyles="false">
							<MudButton ButtonType="ButtonType.Submit" Variant="Variant.Filled" Color="Color.Primary" Class="ml-auto">Save</MudButton>
							<MudButton OnClick="@ReturnToList" ButtonType="ButtonType.Button" Variant="Variant.Filled" Color="Color.Error" Class="ml-auto">Cancel</MudButton>
						</MudButtonGroup>
					</MudCardActions>
				</MudCard>
				<MudText Typo="Typo.body2" Align="Align.Center" Class="my-4">
					Fill out the form correctly to see the success message.
				</MudText>

                <MudExpansionPanels>
                    <MudExpansionPanel Text="Show Validation Summary">
                        @if (Saved)
                        {
                            <MudText Color="Color.Success">Success</MudText>
                        }
                        else
                        {
                            <MudText Color="@Color.Error">
                                <ValidationSummary />
                            </MudText>
                        }
                    </MudExpansionPanel>
                </MudExpansionPanels>
			</EditForm>
			</section>
	}

	else
    {
        <div>
            <a class="btn btn-secondary m-2" @onclick="@ReturnToList">
                Return to list
            </a>
        </div>
    }
@if (!string.IsNullOrWhiteSpace(Message))
    {
        <div class="alert @StatusClass">
            @Message
                <MudButton @onclick="@ClearMessage" Variant="Variant.Filled" Color="Color.Error" Style="height: 12px; width: 12px; min-width: 12px; padding: 1px; top: -6px;">
                    <i class="fas fa-times"></i>
                </MudButton>
        </div>
    }</div>
