@inherits ArtworkListComponentViewModel

@if (BothIdsSetError)
{
    <MudText Typo="Typo.body1">Please only set MediumId or ArtistId when creating ArtworkListComponent, or provide the Artworks list directly.</MudText>
}

@if (Artworks.Any())
{
    <MudGrid>
        @foreach(var artwork in Artworks)
        {
            <MudItem xs="12" md="4">
                <ArtworkPanel Artwork="artwork" FullSize="false" ActAsLink="true" ArtistId="ArtistId" MediumId="MediumId" />
            </MudItem>
        }
    </MudGrid>
}