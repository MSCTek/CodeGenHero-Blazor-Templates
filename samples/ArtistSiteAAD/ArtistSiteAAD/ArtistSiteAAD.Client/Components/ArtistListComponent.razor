@inherits ArtistListComponentViewModel

@if (FirstLoad)
{
    <MudText Typo="Typo.body1" Style="padding: 5px;">Loading, Please Wait</MudText>
}
else
{
    <MudGrid>

        @foreach (var artist in Artists)
        {
            <MudItem xs="12" md="4">
                <ArtistPanel Artist="artist" ActAsLink="true" />
            </MudItem>
        }

    </MudGrid>
}

