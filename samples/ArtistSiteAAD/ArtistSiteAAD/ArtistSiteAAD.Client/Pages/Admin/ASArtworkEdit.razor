@page "/admin/artworkedit/{ArtworkId:int}"
@inherits ASArtworkEditViewModel
<div class="mud-palette-override"> @* This outer div is necessary for CSS Isolation to function *@

    @if (!IsReady)
    {
        <MudText>
            Loading....
        </MudText>
    }

	@if (!Saved)
	{
			<section class="artwork">
			<MudText Typo="Typo.h6" GutterBottom="true">@Artwork?.Name</MudText> @* Replace with an appropriate identifying string property *@
			<EditForm Model="@Artwork" OnValidSubmit="OnValidSubmit">
				<DataAnnotationsValidator />
				<MudCard>
					<MudCardContent>
						<MudTextField Label="Name" @bind-Value="Artwork.Name" />
                        <MudTextField Lines="5" Label="Description" @bind-Value="Artwork.Description" />
                        <MudNumericField Label="Artist ID" @bind-Value="Artwork.ArtistId" />
                        <MudTextField Label="Icon URL" @bind-Value="Artwork.IconUri" />
                        <MudTextField Label="Full URL" @bind-Value="Artwork.ImageUri" />
                        <MudNumericField Label="Display Priority" @bind-Value="Artwork.DisplayOrder" />
                        <MudCheckBox Label="Active" @bind-Checked="Artwork.IsActive" />
					</MudCardContent>
					<MudCardActions>
						<MudButtonGroup Variant="Variant.Filled" OverrideStyles="false">
							<MudButton ButtonType="ButtonType.Submit" Variant="Variant.Filled" Color="Color.Primary" Class="ml-auto">Save</MudButton>
							<MudButton OnClick="@ReturnToList" ButtonType="ButtonType.Button" Variant="Variant.Filled" Color="Color.Error" Class="ml-auto">Cancel</MudButton>
						</MudButtonGroup>
					</MudCardActions>
				</MudCard>
				<MudText Typo="Typo.body2" Align="Align.Center" Class="my-4">
					Fill out the form correctly to see the success message.
				</MudText>

                <MudExpansionPanels>
                    <MudExpansionPanel Text="Show Validation Summary">
                        @if (Saved)
                        {
                            <MudText Color="Color.Success">Success</MudText>
                        }
                        else
                        {
                            <MudText Color="@Color.Error">
                                <ValidationSummary />
                            </MudText>
                        }
                    </MudExpansionPanel>
                </MudExpansionPanels>
			</EditForm>
			</section>
	}

	else
    {
        <div>
            <a class="btn btn-secondary m-2" @onclick="@ReturnToList">
                Return to list
            </a>
        </div>
    }
@if (!string.IsNullOrWhiteSpace(Message))
    {
        <div class="alert @StatusClass">
            @Message
                <MudButton @onclick="@ClearMessage" Variant="Variant.Filled" Color="Color.Error" Style="height: 12px; width: 12px; min-width: 12px; padding: 1px; top: -6px;">
                    <i class="fas fa-times"></i>
                </MudButton>
        </div>
    }</div>
