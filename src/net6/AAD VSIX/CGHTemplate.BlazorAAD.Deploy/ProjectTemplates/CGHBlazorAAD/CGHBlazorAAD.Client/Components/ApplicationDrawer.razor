@inherits ApplicationDrawerViewModel

<MudAppBar Color="Color.Primary">
    <MudIconButton ButtonType="ButtonType.Button" Icon="@Icons.Filled.Menu" Edge="Edge.Start" OnClick="ToggleDrawer" />
    <LoginDisplay />
</MudAppBar>

<MudDrawer Variant="DrawerVariant.Responsive" @bind-Open="DrawerOpen">
    <MudDrawerHeader>
        <MudText Typo="Typo.h4">Your Application</MudText>
    </MudDrawerHeader>
    <MudNavMenu>
        <MudNavLink Href="/Index">Index</MudNavLink>

        <AuthorizeView Policy=@Consts.ACCESS_USER Context="authorizeViewContext">
            <Authorized>
                <MudNavLink Href="/AuthExamplePage">Authorized User Page</MudNavLink>
            </Authorized>
        </AuthorizeView>
    </MudNavMenu>
</MudDrawer>