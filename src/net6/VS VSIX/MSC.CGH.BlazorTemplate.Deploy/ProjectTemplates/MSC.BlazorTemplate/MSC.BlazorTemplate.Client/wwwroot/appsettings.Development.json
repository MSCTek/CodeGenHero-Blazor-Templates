{
  "DetailedErrors": true,
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "AllowedHosts": "*",
  "CGHAppSettings": {
    "IsWebAssembly": true,
    "ImagesBaseAddress": "https://YourAzureStorage.blob.core.windows.net/webimages/",
    "ApiBaseAddress": "https://localhost:5301/"
  },
  "OidcConfiguration": {
    "Authority": "https://localhost:5401",
    "ClientId": "CGHClientId",
    "DefaultScopes": [
      "openid",
      "profile",
      "offline_access",
      "email",
      "CGHApi",
      "country",
      "userId",
      "roles"
    ],
    "RedirectUri": "https://localhost:5201/authentication/login-callback",
    "PostLogoutRedirectUri": "https://localhost:5201/authentication/logout-callback",
    "ResponseType": "code"
  },
  "UserOptions": {
    "NameClaim": "email",
    "RoleClaim": "role"
  }
}