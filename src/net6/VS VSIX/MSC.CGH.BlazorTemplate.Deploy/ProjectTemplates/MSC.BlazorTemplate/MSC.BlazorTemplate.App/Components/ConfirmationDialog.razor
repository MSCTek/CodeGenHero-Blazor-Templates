@inherits ConfirmationDialogViewModel

<div class="mud-palette-override"> @* This outer div is necessary for the isolated CSS to work properly *@
    <MudDialog>
        <DialogContent>
            <MudText>@ContentText</MudText>
        </DialogContent>
        <DialogActions>
            <MudButton OnClick="@Cancel">Cancel</MudButton>
            <MudButton Color="@Color" Variant="Variant.Filled" OnClick="@Submit">@ButtonText</MudButton>
        </DialogActions>
    </MudDialog>
</div>
